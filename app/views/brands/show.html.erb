<!-- display each brand -->
<h1><%= @brand.brand_name.upcase %></h1>
  <h4>Brand Details </h4>
<div class="contain">
    Brand : <%=  @brand.brand_name %><br>
    <% if @perk != nil %>
      Perk : <%= @perk.title %><br>
      Discount : <%= @perk.discount %><br>
    <% else %>
      Sorry No Perks Here! Try again some other time.
    <% end %>
    <% if is_admin? %>
      <%= link_to 'Edit', edit_brand_path(@brand) %> |
    <% end %>
      <%= link_to 'Back', brands_path %>
</div>