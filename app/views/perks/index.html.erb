              </div>
              <div class='panel-footer'>
              <%= render partial: '/favourites/favourite_buttons', locals: {perk: perk} %>
              </div>
              <%= link_to 'Edit', edit_perk_path(perk) %>
               <%= link_to 'Destroy', perk, method: :delete, data: { confirm: 'Are you sure?' } %>
            </li>
          <ul>
        <% end %>
    <% end %>




