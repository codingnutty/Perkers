<%= link_to 'Add Perk', new_perk_path %>

<h1>Listing Perks near you</h1>

    <% @perks.each do |perk| %>
        <% if @user.zipcode == perk.zipcode %>
        <ul>
            <li class="perks-list">
              <a href="/perks/<%= perk.id%>"><%= perk.title %></a>
              <%= perk.discount %> % </td>
              <div class='panel' style='border: none;'>
              <% if @errors %>
              <h3><%= @errors %></h3>
              <% end %>
              </div>
              <div class='panel-footer'>
              <%= render partial: '/favourites/favourite_buttons', locals: {perk: perk} %>
              </div>
              <%= link_to 'Edit', edit_perk_path(perk) %>
               <%= link_to 'Destroy', perk, method: :delete, data: { confirm: 'Are you sure?' } %>
            </li>
        <ul>
        <% end %>
    <% end %>

<h1>Listing all Perks</h1>
    <% @perks.each do |perk| %>
        <% if @user.zipcode != perk.zipcode %>
          <ul>
