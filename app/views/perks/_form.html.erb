<% if user_signed_in? %>

  <%= form_for(@perk) do |f| %>
    <% if @perk.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@perk.errors.count, "error") %> prohibited this perk from being saved:</h2>

        <ul>
        <% @perk.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <fieldset class="form-group">
      <%= f.label :brand_id %><br>
      <%= collection_select(:perk, :brand_id, Brand.all, :id, :brand_name, prompt: true) %>
    </fieldset>
    <fieldset class="form-group">
      <%= f.label :title %><br>
      <%= f.text_field :title, class: "form-control" %>
    </fieldset>
    <fieldset class="form-group">
      <%= f.label :discount %><br>
      <%= f.text_area :discount, class: "form-control" %>
    </fieldset>
    <fieldset class="form-group">
      <%= f.label :address %><br>
      <%= f.text_field :address, class: "form-control" %>
    </fieldset>
    <fieldset class="form-group">
      <%= f.label :zipcode %><br>
      <%= f.number_field :zipcode, class: "form-control" %>
    </fieldset>
    <fieldset class="form-group">
      <%= f.label :city %><br>
      <%= f.text_field :city, class: "form-control" %>
    </fieldset>
    <fieldset class="form-group">
      <%= f.label :state, placeholder: "optional" %><br>
      <%= f.text_field :state, class: "form-control" %>
    </fieldset>

    <fieldset class="actions">
      <%= f.submit class: "btn btn-primary" %>
    </fieldset>
  <% end %>

<% else %>
    You are not admin. You do not have adding or updating permission
<% end %>