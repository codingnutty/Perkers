<h1>ALL CATERGORIES</h1>
    <% @categories.each do |category| %>
      <div class="panel panel-primary contain" id="category<%=category.id %>"
        <div class="panel-body">
          <a href="/categories/<%=category.id %>"><%= category.cat_name %></a>
          <p> Description:<%=category.description %>

        <div class = "panel-footer">
          <% if is_admin? %>
            <%= link_to 'Edit', edit_category_path(category) %>
            <%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' } %>
          <% end %>
        </div>
        </div>
      </div>
    <% end %>
    <div class="digg_pagination">
    <div class="page_info">
      <%= page_entries_info @categories %>
    </div>
      <%= will_paginate @categories, :container => false %>
      <%= will_paginate @categories, :page_links => false %>
   </div>
<br>
<% if is_admin? %>
  <%= link_to 'New Category', new_category_path %>
<% end %>
<%= link_to 'Back', perks_path %>