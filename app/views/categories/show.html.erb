<!-- display each category -->
<h1><%= @category.cat_name.upcase %></h1>
<h4>Category Details </h4>

<div class="contain">
  <% if @brand != nil && @perk != nil %>
    Brand: <%= @brand.brand_name %><br>
    Perk:<%=@perk.title %><br>
    Discount:<%=@perk.discount %>% <br>
  <% else %>
    Sorry No Perks Here! Try again some other time.
  <% end %>
  <% if is_admin? %>
    <%= link_to 'Edit', edit_category_path(@category) %> |
  <% end %>
  <%= link_to 'Back', categories_path %>
</div>